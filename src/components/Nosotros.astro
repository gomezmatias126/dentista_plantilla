    <div
      class="relative z-40 lg:w-6/12 w-full flex items-center justify-center"
    >
      <img src={foto} alt="" class="sm:w-auto w-full rounded-2xl" />
    </div>
    <article
      class="descripcion_sobre_mi relative z-30 lg:w-6/12 w-full flex flex-col lg:gap-4 sm:gap-6 gap-4 items-start lg:py-0 py-10"
    >
      <div class="absolute top-1/2 -translate-y-1/2 -z-10 w-full h-full overflow-hidden object-fit">
        <svg
          class="lg:w-full lg:h-auto sm:w-auto sm:h-full w-full h-max opacity-60 sm:mt-0 mt-20"
          width="1191"
          height="1314"
          viewBox="0 0 1191 1314"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
